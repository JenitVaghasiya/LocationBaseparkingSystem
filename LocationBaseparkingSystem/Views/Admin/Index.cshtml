@model IEnumerable<LocationBaseparkingSystem.Models.ParkOnVendor>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-12">
        <h4 class="page-head-line">
            List of Vendors
            <a href="/admin/create" class="btn btn-primary pull-right">
                <i class="fa fa-plus"></i> Create
            </a>
        </h4>
    </div>
</div>
<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            List of Vendors
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>No of parking space</th>
                            <th>Lang-Long</th>
                            <th>Rate</th>
                            <th>Is Active</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Email</td>
                            <td>@item.NoOfParkingSpace</td>
                            <td>@item.Latitude - @item.Longitude</td>
                            <td>@item.HourRate</td>
                            @if (item.IsActive)
                            {
                                <td>
                                    <span class="isactive">Active</span>
                            </td>
                            }
                            else
                            {
                                <td><span class="ispending">Pending</span></td>
                            }
                            <td>
                                <a href="/admin/edit/@item.Id" class="btn btn-primary"><i class="fa fa-edit"></i></a>
                                <a href="/admin/delete/@item.Id" class="btn btn-danger"><i class="fa fa-trash-alt"></i></a>
                            </td>
                        </tr>
                        }
                        </tbody>
                </table>
            </div>
        </div>
    </div>
</div>