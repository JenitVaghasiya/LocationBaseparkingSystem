@{
    ViewBag.Title = "Park On";
}
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>


<div class="row">
    <div class="col-md-12">
        <h4 class="page-head-line">ParkOn</h4>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="park-on-header col-lg-12 col-md-12 col-sm-12">
            Hey! Having trouble finding parking space? Click below button and find near your current area.
        </div>
        <div class="row">
            <div class="find-parking-space col-lg-12 col-md-12 col-sm-12">
                <button onclick="getLocation()" class="btn btn-primary btn-lg font-title">
                    FIND PARKING SPACE FROM YOUR CURRENT LOCATION
                </button>
            </div>
        </div>
        
        <div class="option-area">
            <span>OR</span>
        </div>
        <div class="find-parking-space">
            <div class="form-group">
                <label for="exampleInputEmail1">ENTER AREA</label><br />
                <input style="display:inline-block; width:50%" type="email" class="form-control" id="txtArea" placeholder="VADI WADI" />&nbsp;
                <button onclick="geocode()" class="btn btn-primary btn-lg" style="padding:7px !important;">
                    FIND
                </button>
            </div>
            <div style="text-align: center;">

            </div>
        </div>
        @*<div class="parking-info">*@


    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            @*//style="position:relative;width:800px;height:300px;margin-bottom:20px"*@
            <div id="map" class="map_convas" style="position:relative;width:100%;height:300px;margin-bottom:20px"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div id="vendordata"></div>
        </div>

    </div>

</div>
<style>
    div.map_convas {
        width: 100%;
        height: 100%;
        overflow: hidden;
        margin: 0em 0em 0em 0em;
        padding: 0em 0em 0em 0em;
    }
</style>

